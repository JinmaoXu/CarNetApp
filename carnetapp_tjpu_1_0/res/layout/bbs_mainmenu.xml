<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:hyman="http://schemas.android.com/apk/res/com.tjpu.carnetapp"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.tjpu.bbs.SlidingMenu
        android:id="@+id/bbs_mainmenu_leftmenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/title_bar"
        hyman:rightPadding="80dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal" >
	
            <include layout="@layout/bbs_mainmenu_left" />
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical">
      <include layout="@layout/bbs_mainmenu_fragment" />
	
		
        </LinearLayout>
      </LinearLayout>
    </com.tjpu.bbs.SlidingMenu>

</RelativeLayout>