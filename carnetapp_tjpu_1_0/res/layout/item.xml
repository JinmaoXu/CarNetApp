<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
	<TextView 
	    android:id="@+id/catalog"
	    android:layout_width="match_parent"
	    android:layout_height="1dp"/>
    <LinearLayout
        android:id="@+id/music_main_lvsubll"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="20dp"
            android:layout_height="60dp"
            android:orientation="horizontal" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/music_main_lvsub_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="一直都很"
                    android:textColor="#575754"
                    android:textSize="18sp"
                    android:maxEms="10" 
                    android:ellipsize="end"
                    android:singleLine="true" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:src="@drawable/player_btn_hq_hlight" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="horizontal" >
                <TextView
                android:id="@+id/music_main_lvsub_artist"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="一直都很"
                android:textSize="10dp"
                android:textColor="#BBBCB4" />
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_action_bar_play_normal" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:src="@drawable/icon_up"/>

        <LinearLayout
            android:layout_width="20dp"
            android:layout_height="60dp"
            android:orientation="horizontal" >

            
        </LinearLayout>
    </LinearLayout>

    

</LinearLayout>