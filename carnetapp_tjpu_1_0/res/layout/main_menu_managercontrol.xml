<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/title_bar" >

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="i车生活"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/mainmenu_toptv_news"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#d8222222"
            android:clickable="true"
            android:gravity="center"
            android:text="新闻"
            android:textColor="#2ae7d6"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/mainmenu_toptv_music"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:text="音乐"
            android:textColor="#2ae7d6"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/mainmenu_toptv_orders"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:text="订单"
            android:textColor="#2ae7d6"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/mainmenu_toptv_mycar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:text="汽车"
            android:textColor="#2ae7d6"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/mainmenu_toptv_myset"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:text="我的"
            android:textColor="#2ae7d6"
            android:textSize="30dp" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/mainmenu_fragment"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
    </FrameLayout>

    <include layout="@layout/music_play" />

</LinearLayout>