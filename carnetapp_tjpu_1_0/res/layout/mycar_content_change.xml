<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/register_bg" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/title_bar" >

            <TextView
                android:id="@+id/bbs_contentmenu_tv_title"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="修改汽车信息"
                android:textColor="#ffffff"
                android:textSize="20sp" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:text="汽车品牌:"
                        android:textColor="@color/white"
                        android:textSize="24dp" />

                    <EditText
                        android:id="@+id/mycar_change_et_brand"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingBottom="0dp"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:text="型号:"
                        android:textColor="@color/white"
                        android:textSize="24dp" />

                    <EditText
                        android:id="@+id/mycar_change_et_type"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingBottom="0dp"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:text="车牌号码:"
                        android:textColor="@color/white"
                        android:textSize="24dp" />

                    <EditText
                        android:id="@+id/mycar_change_et_carnumber"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingBottom="0dp"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:text="发动机号:"
                        android:textColor="@color/white"
                        android:textSize="24dp" />

                    <EditText
                        android:id="@+id/mycar_change_et_enginenumber"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingBottom="0dp"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:text="车身级别:"
                        android:textColor="@color/white"
                        android:textSize="24dp" />

                    <Spinner
                        android:id="@+id/mycar_change_et_jibie"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:entries="@array/car_type"
                        android:paddingBottom="0dp"
                        android:textSize="24sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:text="行驶里程:"
                        android:textColor="@color/white"
                        android:textSize="24dp" />

                    <EditText
                        android:id="@+id/mycar_change_et_drvierlength"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:inputType="number"
                        android:paddingBottom="0dp"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="right"
                        android:text="公里"
                        android:textColor="@color/white"
                        android:textSize="24dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:text="剩余汽油:"
                        android:textColor="@color/white"
                        android:textSize="24dp" />

                    <EditText
                        android:id="@+id/mycar_change_et_gasnumber"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:inputType="number"
                        android:paddingBottom="0dp"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="right"
                        android:text="%"
                        android:textColor="@color/white"
                        android:textSize="24dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        android:text="发动机性能:"
                        android:textColor="@color/white"
                        android:textSize="24dp" />

                    <RadioGroup
                        android:id="@+id/mycar_change_rg_enginestate"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:orientation="horizontal" >

                        <RadioButton
                            android:id="@+id/mycar_change_rb_enginestategood"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                        
                            android:text="好"
                            android:textColor="@color/white"
                            android:textSize="24sp" />

                        <RadioButton
                            android:id="@+id/mycar_change_rb_enginestatebad"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="异常"
                            android:textColor="@color/white"
                            android:textSize="24sp" />
                    </RadioGroup>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        android:text="变数器性能:"
                        android:textColor="@color/white"
                        android:textSize="24dp" />

                    <RadioGroup
                        android:id="@+id/mycar_change_rg_transmissionstate"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:orientation="horizontal" >

                        <RadioButton
                            android:id="@+id/mycar_change_rb_transmissionstategood"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            
                            android:text="好"
                            android:textColor="@color/white"
                            android:textSize="24sp" />

                        <RadioButton
                            android:id="@+id/mycar_change_rb_transmissionstatebad"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="异常"
                            android:textColor="@color/white"
                            android:textSize="24sp" />
                    </RadioGroup>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        android:text="车灯性能:"
                        android:textColor="@color/white"
                        android:textSize="24dp" />

                    <RadioGroup
                        android:id="@+id/mycar_change_rg_lightsstate"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:orientation="horizontal" >

                        <RadioButton
                            android:id="@+id/mycar_change_rb_lightsstategood"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            
                            android:text="好"
                            android:textColor="@color/white"
                            android:textSize="24sp" />

                        <RadioButton
                            android:id="@+id/mycar_change_rb_lightsstatebad"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="异常"
                            android:textColor="@color/white"
                            android:textSize="24sp" />
                    </RadioGroup>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
        </LinearLayout>

        <Button
        android:id="@+id/mycar_change_btn_change"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/button_confirm_selector"
        android:text="确定"
        android:textColor="#969696"
        android:textSize="20sp" />
    </RelativeLayout>
