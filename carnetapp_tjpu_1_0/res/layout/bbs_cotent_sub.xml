<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F2F2F2"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/bbs_content_sub_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/linearlayout_selector"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal" >

            <com.tjpu.tools.CircleImageView
                android:id="@+id/bbs_content_sub_iv_logo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/carimg9"
                app:border_color="#F2F2F2"
                app:border_width="1dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/bbs_content_sub_tv_nickname"
                        android:layout_width="0dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:text="君临落风"
                        android:textColor="#575754"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/bbs_content_sub_tv_num"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:text="1楼"
                        android:textColor="#575754"
                        android:textSize="10sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/bbs_content_sub_tv_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="君临落风"
                    android:textColor="#575754"
                    android:textSize="16sp"
                     />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/bbs_content_sub_img"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginLeft="45dp"
            android:src="@drawable/carimg10" />

        <TextView
            android:id="@+id/bbs_content_sub_tv_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:text="7月29日11点10分"
            android:textColor="#BBBCB4"
            android:textSize="10dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#22000000" />

</LinearLayout>