<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/mycar_menu_ll_sub"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/dark_color_selector"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/mycar_menu_tv_brand"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="品牌" />

            <ImageView
                android:id="@+id/mycar_menu_iv_logo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                 />
        </LinearLayout>

        <TextView
            android:id="@+id/mycar_menu_tv_driverlength"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="行驶里程" />

        <TextView
            android:id="@+id/mycar_menu_tv_gasnumber"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="剩余汽油:" />

        <TextView
            android:id="@+id/mycar_menu_tv_engineerstate"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="发动机性能:" />

        <TextView
            android:id="@+id/mycar_menu_tv_transmissionstate"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="变速器性能:" />

        <TextView
            android:id="@+id/mycar_menu_tv_lightsstate"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="车灯性能:" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="查看更多信息>"
            android:textStyle="bold" />
    </LinearLayout>
	<Button 
	    android:id="@+id/mycar_menu_checkfine"
	    android:layout_height="50dp"
	    android:layout_width="match_parent"
	    android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/button_confirm_selector"
	    android:text="违章查询"/>"
</LinearLayout>