<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
 <!-- top -->
 <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@drawable/title_bar"
    android:orientation="horizontal" >
		<ImageView
            android:id="@+id/ask_question_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back" />
        <TextView
            android:id="@+id/textView"
       		android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:layout_marginLeft="70dp"
            android:text="意见反馈" /> 
</LinearLayout>   
<!-- top -->

 <EditText
     android:layout_marginTop="20dp"
     android:id="@+id/ask_info"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:hint="请输入联系方式，手机号/QQ/邮箱"
     android:ems="10" >

     <requestFocus />
 </EditText>

 <EditText
     android:hint="请输入您的建议"
     android:id="@+id/ask_sub"
     android:layout_width="match_parent"
     android:layout_height="150dp"
     android:ems="10" />

 <Button
     android:id="@+id/ask_question_submit"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:background="@drawable/btn_manimenu_selector"
     android:text="提交" />

 <TextView
     android:id="@+id/textView1"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:text="也可直接发送邮件至 794879685@qq.com,我们会第一时间与您联系"
     android:textSize="20dp" 
     android:textColor="#F80404"/>

</LinearLayout>

