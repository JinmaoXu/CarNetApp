<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0000" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <com.tjpu.tools.CircleImageView
            android:id="@+id/bbs_mainmenuleft_iv_logo"
            android:layout_centerVertical="true"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/carimg9"
            app:border_color="#F2F2F2"
            app:border_width="1dp" />
 </LinearLayout>
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical" >

            <TextView
                android:id="@+id/bbs_mainmenu_myinfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="我的个人信息		>"
                android:textColor="#ffffff"
                android:textSize="25sp" />
        

        

            <TextView
                android:id="@+id/bbs_mainmenu_myarticle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="我发布的帖子		>"
                android:textColor="#ffffff"
                android:textSize="25sp" />
        

            <TextView
                android:id="@+id/bbs_mainmenu_mycollect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="我收藏的帖子		>"
                android:textColor="#ffffff"
                android:textSize="25sp" />
        

            <TextView
                android:id="@+id/bbs_mainmenu_myfollow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="我关注的车友会		>"
                android:textColor="#ffffff"
                android:textSize="25sp" />
        

            
        </LinearLayout>
   

</RelativeLayout>